{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      <div class="icon-and-link-wrapper">
        {% if content.field_image.0 %}
          <div class="icon-image">{{ content.field_image.0 }}</div>
        {% endif %}
        <div class="icon-link">{{ content.field_icon_link.0 }}</div>
      </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
