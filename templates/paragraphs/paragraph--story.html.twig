{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      <div class="image-wrapper">
        {{ content.field_image.0 }}
      </div>
      <div class="inner-story">
        <p class="quote">{{ content.field_story_title.0 }}</h2>
        {% if content.field_citation.0 %}
          <p class="story-citation">{{ content.field_citation.0 }}</p>
        {% endif %}
        {% if content.field_cta.0 %}
          {{ content.field_cta.0 }}
        {% endif %}
      </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
